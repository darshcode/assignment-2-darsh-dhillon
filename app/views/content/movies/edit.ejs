<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= movie._id %>" >
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="ex) john Doe"
                    name="name" 
                    value="<%= movie.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Contact Number</label>
                    <input type="number" class="form-control"
                    id="authorTextField"
                    placeholder="ex) 647 101 1011"
                    name="year" 
                    value="<%= movie.year %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Contact E-mail Address</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="ex) john_doe@live.com"
                    name="director" 
                    value="<%= movie.director %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Expertise</label>
                    <input type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="ex) painting"
                    name="genre"                     
                    value="<%= movie.genre %>"
                    required
                    >
                    </input>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/movie-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>